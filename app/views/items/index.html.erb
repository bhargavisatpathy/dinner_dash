<h2>All Items</h2>
<table>
  <% @items.each do |item| %>
  <tr>
    <td>
      <%= item.title %>
    </td>
    <td>
      <%= item.description %>
    </td>
    <td>
      <%= number_to_currency(item.price / 100) %>
    </td>
    <td>
      <%= image_tag(item.image) %>
    </td>
    <td>
      <%= button_to "Add to Cart", cart_index_path(item_id: item) %>
    </td>
  </tr>
  <% end %>
</table>
