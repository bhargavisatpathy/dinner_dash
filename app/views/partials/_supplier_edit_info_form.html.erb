<div class="form-horizontal">
	<%= form_for [@supplier], url: supplier_path(@supplier.slug), method: :patch do |f| %>	
		<% if @supplier.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@supplier.errors.count, "error") %> prohibited this item from being saved:</h2>
        <ul>
          <% @supplier.errors.full_messages.each do |message| %>
            <li><%= message %> </li>
          <% end %>
        </ul>
      </div>
		<% end %>

		<div class="form-group">
      <%= f.label :name, "Supplier Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :name, placeholder: "Supplier Name", class: "form-control" %>
      </div>
		</div>

		<div class="form-group">
      <%= f.label :description, "Supplier Description", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_area :description, placeholder: "Supplier Description", class: "form-control" %>
      </div>
		</div>  

		<div class="form-group text-right">
			<div class="col-sm-9">
				<%= f.submit "Update", class: "btn btn-lg btn-default" %>
			</div>
		</div>
	<% end  %>
</div>
