<div class="form-horizontal">

<%= form_for [:supplier, @item], url: { action: "create" },:html => { multipart: true } do |f| %>
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, "Title", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :title, placeholder: "New Item Name", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Item Description", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_area :description, placeholder: "New Item Description", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, "Item Price", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :price, placeholder: "New Item Price", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :quantity, "Quantity Available", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :quantity, placeholder: "Quantity Available", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :location, "Current Location", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :location, placeholder: "Item location", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :unit_size, "Unit Size", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :unit_size, placeholder: "Unit Size", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :unit_weight, "Unit Weight", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.text_field :unit_weight, placeholder: "Unit Weight", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :retired, "Retire Item?", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
      <%= f.check_box :retired %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :available, "Item Not Currently Available?", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
      <%= f.check_box :available %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :shippable, "Item Not Shippable?", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
      <%= f.check_box :shippable %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, "Image", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-7">
        <%= f.hidden_field :supplier_id, :value => @supplier.id %>
      </div>
    </div>

    <div id="form-group">
      <%= f.label :category, "Category", class: "col-sm-2 control-label" %>
      <div class="col-sm-7">
        <%   @categories.each do |category| %>
        <%=  f.label :category_list, category.name, class: "checkbox-inline" %>
        <%=  check_box(:category_list, "categories", {:multiple => true}, category.name, nil) %>
        <% end %>
      </div>
    </div>

    <div class="form-group text-right">
      <div class="col-sm-9">
        <%= f.submit "Save", class: "btn btn-lg btn-default" %>
      </div>
    </div>
  <% end %>
</div>
