<!DOCTYPE html>
<html>
<head>
  <title>DinnerDash</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>

  <meta charset=utf-8 />
  <title>A simple map</title>
  <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
  <script src='https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.js'></script>
  <link href='https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.css' rel='stylesheet' />
  <style>
  body { margin:0; padding:0; }
  #map { position:absolute; left: -1px; top: 150px; bottom:0; width:100%; }
  </style>

</head>
<body>

  <div class="container">
    <div class="row">
      <div id="user_nav">
        <% if current_user %>
          Welcome, <%= current_user.fullname %>
          <%= link_to('Logout', logout_path, :method => :delete) %>
        <% else %>
          <%= link_to('Register', register_path) %>
        <% end %>
        <div id="cart">
          <i class="fa fa-shopping-cart fa-2x"></i><%= link_to @cart.count_total, cart_path(cart_id = @cart) %>
        </div>
      </div>

      <div id="session">
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Login" %>
        <% end %>
      </div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <%= render partial: './partials/category_bar' %>

    <%= yield %>

    </div>
  </div>
<%= debug(params) if Rails.env.development? %>

<%= javascript_include_tag 'application' %>

</body>
</html>
